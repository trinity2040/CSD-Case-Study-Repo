-- Create FinancialAccounts Table
CREATE TABLE FinancialAccounts (
    ACCOUNT_ID NUMBER PRIMARY KEY,
    CUSTOMER_ID NUMBER NOT NULL,
    ACCOUNT_TYPE VARCHAR2(50) NOT NULL,
    OPENING_DATE DATE NOT NULL,
    BALANCE NUMBER(10, 2) NOT NULL
);

-- Create AccountTransactions Table
CREATE TABLE AccountTransactions (
    TRANSACTION_ID NUMBER PRIMARY KEY,
    ACCOUNT_ID NUMBER NOT NULL,
    TRANSACTION_DATE DATE NOT NULL,
    AMOUNT NUMBER(10, 2) NOT NULL,
    DESCRIPTION VARCHAR2(255),
    FOREIGN KEY (ACCOUNT_ID) REFERENCES FinancialAccounts(ACCOUNT_ID)
);

-- Create AccountReports Table
CREATE TABLE AccountReports (
    REPORT_ID NUMBER PRIMARY KEY,
    REPORT_DATE DATE NOT NULL,
    ACCOUNT_BALANCES CLOB,
    TRANSACTION_SUMMARY CLOB,
    MONTHLY_STATEMENT CLOB
);
